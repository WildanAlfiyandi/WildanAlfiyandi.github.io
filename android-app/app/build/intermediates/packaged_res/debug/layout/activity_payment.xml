<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F5F5">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Pilih Metode Pembayaran"
            android:textColor="#212121"
            android:textSize="20sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/amount_input"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="24dp"
            android:background="@android:color/white"
            android:elevation="2dp"
            android:hint="Jumlah (Rp)"
            android:inputType="number"
            android:padding="12dp"
            android:textSize="16sp" />

        <RadioGroup
            android:id="@+id/payment_method_group"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp">

            <RadioButton
                android:id="@+id/qris_radio"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:color/white"
                android:elevation="2dp"
                android:padding="16dp"
                android:text="QRIS"
                android:textSize="16sp" />

            <RadioButton
                android:id="@+id/dana_radio"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:background="@android:color/white"
                android:elevation="2dp"
                android:padding="16dp"
                android:text="DANA"
                android:textSize="16sp" />

            <RadioButton
                android:id="@+id/gopay_radio"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:background="@android:color/white"
                android:elevation="2dp"
                android:padding="16dp"
                android:text="GoPay"
                android:textSize="16sp" />

            <RadioButton
                android:id="@+id/ovo_radio"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:background="@android:color/white"
                android:elevation="2dp"
                android:padding="16dp"
                android:text="OVO"
                android:textSize="16sp" />

        </RadioGroup>

        <TextView
            android:id="@+id/qris_info_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="Pilih metode pembayaran"
            android:textColor="#757575"
            android:textSize="14sp" />

        <Button
            android:id="@+id/pay_button"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="32dp"
            android:backgroundTint="#4CAF50"
            android:text="Bayar Sekarang"
            android:textColor="@android:color/white"
            android:textSize="16sp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="16dp"
            android:text="Note: Ini adalah mockup UI.\nIntegrasi payment gateway memerlukan merchant account."
            android:textAlignment="center"
            android:textColor="#FF5722"
            android:textSize="12sp" />

    </LinearLayout>
</ScrollView>
