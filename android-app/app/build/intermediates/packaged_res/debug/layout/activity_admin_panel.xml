<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F5F5">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ðŸ” Admin Panel"
            android:textColor="#212121"
            android:textSize="24sp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="Advanced Features"
            android:textColor="#757575"
            android:textSize="14sp" />

        <!-- Website Deployment Section -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:text="Deploy Website"
            android:textColor="#212121"
            android:textSize="18sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/website_url_input"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="16dp"
            android:background="@android:color/white"
            android:elevation="2dp"
            android:hint="Website URL"
            android:inputType="textUri"
            android:padding="12dp"
            android:textSize="16sp" />

        <EditText
            android:id="@+id/website_files_input"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_marginTop="16dp"
            android:background="@android:color/white"
            android:elevation="2dp"
            android:gravity="top"
            android:hint="File paths atau repository URL"
            android:inputType="textMultiLine"
            android:padding="12dp"
            android:textSize="14sp" />

        <Button
            android:id="@+id/deploy_button"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="16dp"
            android:backgroundTint="#4CAF50"
            android:text="ðŸš€ Deploy Website"
            android:textColor="@android:color/white"
            android:textSize="16sp" />

        <!-- Spotify Player Section -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:text="Music Player"
            android:textColor="#212121"
            android:textSize="18sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/spotify_button"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="16dp"
            android:backgroundTint="#1DB954"
            android:text="ðŸŽµ Open Spotify Player"
            android:textColor="@android:color/white"
            android:textSize="16sp" />

        <!-- Analytics Section -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:text="Analytics"
            android:textColor="#212121"
            android:textSize="18sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/analytics_button"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="16dp"
            android:backgroundTint="#2196F3"
            android:text="ðŸ“Š View Analytics"
            android:textColor="@android:color/white"
            android:textSize="16sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="24dp"
            android:text="Note: Admin features are mockups.\nReal implementation requires backend infrastructure."
            android:textAlignment="center"
            android:textColor="#FF5722"
            android:textSize="12sp" />

    </LinearLayout>
</ScrollView>
